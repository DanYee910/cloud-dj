<div id="my_rooms_carousel_div" class="bd-sm">
  <div id="joined_rooms_carousel" class="owl-carousel owl-theme">
    <% if @joined_rooms %>
      <% @joined_rooms.each do |roomuser| %>
        <div class="item" id="<%= roomuser.room.id %>">
          <h4><%= roomuser.room.name %></h4>
          <br>
          <h5><%= roomuser.room.description %></h5>
        </div>
      <% end %>
    <% else %>
      <h3>You don't have any rooms yet!</h3>
    <% end %>
  </div>

  <div class="customNavigation">
    <a class="btn prev">Previous</a>
    <a class="btn next">Next</a>
    <a class="btn play">Autoplay</a>
    <a class="btn stop">Stop</a>
  </div>
</div>
