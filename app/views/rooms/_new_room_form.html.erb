<div id="new_room_form_div" class="bd-sm wdt-l ht-s dsp-n">
  <%= form_for :room, :html => {:method => :post}, :url => rooms_path do |f| %>
      <%= f.text_field :name, :placeholder => "give you room a name" %>
      <%= f.text_area :description, :placeholder => "what's your room all about?" %>
      <%= f.radio_button :publicness, true %>
      <%= f.radio_button :publicness, false %>
      <%= f.submit %>
      <% end %>

  <div id="hide_new_room_form_button" >Nevermind</div>
</div>
